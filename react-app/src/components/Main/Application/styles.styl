:root:root .application
  .header
    border-bottom 4px solid #6a2499
  position relative
  background #fff
  margin 20px 20px 20px 20px
  padding 0 10px 40px 10px
  box-shadow 0 1px 1px #b7b7b7
  textarea
    resize none
  .font-big
    font-size 20px
  .font-bigger
    border-bottom-width 2px
    font-size 24px
  .font-biggest
    font-size 30px
  .form + .form
    margin-top 20px
  .fixed-footer
    position fixed
    left 15em
    padding 10px 20px
    right 0px
    bottom 0px
    background #f9fafb
    border-top 1px solid rgba(34,36,38,.1)
    .row
      padding 0
    .button + .button
      margin-left 20px