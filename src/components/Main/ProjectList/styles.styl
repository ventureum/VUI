:root:root .program-list
  position relative
  .withdraw-voting-rights-container
    background rgba(255,255,255,0.9)
    justify-content center
    align-items center
    box-shadow 0 1px 1px #b7b7b7
  .ReactTable
    background #fff
    box-shadow 0 1px 1px #b7b7b7
    border none
    border-radius: 0
    padding 1em
    padding-bottom 70px
    input
      border 1px solid rgba(0,0,0,0.1)
      background #fff
      padding 5px 7px
      font-size inherit
      border-radius 3px
      font-weight normal
      color inherit
      outline none
    .rt-tr
      display inline-flex
      flex 1 0 auto
      width 100%
    .rt-td
      padding 7px 5px
    .rt-table
      overflow auto
    .rt-table::-webkit-scrollbar
      width 5px
      height 5px
    .rt-table::-webkit-scrollbar-track
      background #fff
    .rt-table::-webkit-scrollbar-thumb
      background-color #ccc
      border 1px solid #ccc
    .rt-table::-webkit-scrollbar-thumb:hover
      background-color #aaa
    .rt-thead.-header
      background none
      box-shadow none
      border none
      border-bottom 1px solid #f5f5f5
    .rt-thead .rt-th,.rt-thead .rt-td
      font-weight bold
      border-right none
      text-align left
      padding 7px 5px
    .rt-tbody .rt-tr-group
      border-bottom 1px solid #f5f5f5
    .rt-tbody .rt-td
      border-right none
    .ui.button
      margin 5px
      font-size 0.7em
      text-transform uppercase
      min-width 100px
    .pagination-bottom
      position absolute
      bottom 20px
      left 20px
      right 20px
      .-pagination
        z-index 1
        font-size 0.8em
        display flex
        justify-content space-between
        align-items stretch
        flex-wrap wrap
        padding 3px
        box-shadow 0 0 15px 0 rgba(0,0,0,0.1)
        border-top 2px solid rgba(0,0,0,0.1)
        .-previous,.-next
          flex 1 1 0%
          text-align center
        .-center
          flex 1.5 1 0%
          text-align center
          display flex
          flex-direction row
          flex-wrap wrap
          align-items center
          justify-content space-around
          .-pageInfo
            color #a2a2a2
            display inline-block
            margin 3px 10px
            white-space nowrap
            *
              display inline-block
          .-pageJump input
            width 70px
            text-align center
        .-btn
          padding 0.2em
          -webkit-appearance none
          -moz-appearance none
          appearance none
          display block
          width 100%
          height 100%
          border 0
          border-radius 3px
          color rgba(0,0,0,0.6)
          background rgba(0,0,0,0.1)
          cursor pointer
          outline none
          &[disabled]
            opacity 0.5
            cursor default
    .-loading
      display block
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      background rgba(255,255,255,0.8)
      z-index -1
      opacity 0