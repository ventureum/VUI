.stat-progress-bar
  .stat-bar-container
    width 100%
    height 1.6em
    border none
    position relative
    border-radius 15px
    overflow hidden
    display flex
    justify-content center
  .stat-bar-fill-container
    display inline-flex
    justify-content center
    align-items center
    float left
    height 100%
    background #4585c7
    text-align center
    color #FFFFFF
    font-size 0.9em
    &:first-child
      border-top-left-radius 15px
      border-bottom-left-radius 15px
    &:nth-child(2)
      background #633e80
      border-top-right-radius 15px
      border-bottom-right-radius 15px
    &.round
      border-radius 15px
  .stat-bar-legend
    width 100%
    display flex
    align-items center
    justify-content space-between
    padding 1px 10px
  .fill-label
    font-size 0.8em
    color #4585c7
    &:nth-child(2)
      color #633e80